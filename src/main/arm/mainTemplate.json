{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "[deployment().properties.templateLink.uri]"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "defaultValue": ""
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "identityId": {
            "type": "string"
        },
        "aksClusterName": {
            "type": "string",
            "defaultValue": "akscluster"
        }, 
        "aksClusterRGName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },        
        "spClientId": {
            "type": "string"
        },
        "spClientSecret": {
            "type": "securestring"
        },        
        "appImage": {
            "type": "string"
        },        
        "guidValue": {
            "defaultValue": "[newGuid()]",
            "type": "string"
        }
    },
    "variables": {
        "appName": "[concat('app', take(replace(parameters('guidValue'), '-', ''), 6))]",
        "scriptLocation": "[uri(parameters('_artifactsLocation'), 'scripts/')]",
        "arguments": "[concat(parameters('aksClusterRGName'), ' ', parameters('aksClusterName'), ' ', parameters('appImage'), ' ', variables('appName'))]"
    },
    "resources": [
        {
            "apiVersion": "2019-09-01",
            "name": "${tracking.pid}",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                    ]
                }
            }
        },
        {
            "apiVersion": "2020-09-01",
            "type": "Microsoft.ContainerService/managedClusters",
            "location": "[parameters('location')]",
            "name": "[parameters('aksClusterName')]",
            "properties": {
                "kubernetesVersion": "1.18.10",
                "enableRBAC": true,
                "dnsPrefix": "[concat(parameters('aksClusterName'), '-dns')]",
                "agentPoolProfiles": [
                    {
                        "name": "agentpool",
                        "osDiskSizeGB": 0,
                        "count": 1,
                        "vmSize": "Standard_DS2_v2",
                        "osType": "Linux",
                        "storageProfile": "ManagedDisks",
                        "type": "VirtualMachineScaleSets",
                        "mode": "System"
                    }
                ],
                "networkProfile": {
                    "loadBalancerSku": "standard",
                    "networkPlugin": "kubenet"
                },
                "servicePrincipalProfile": {
                    "ClientId": "[parameters('spClientId')]",
                    "Secret": "[parameters('spClientSecret')]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "deploymentScript",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerService/managedClusters', parameters('aksClusterName'))]"
            ],
            "kind": "AzureCLI",
            "identity": {
                "type": "userAssigned",
                "userAssignedIdentities": {
                    "[parameters('identityId')]": {}
                }
            },
            "properties": {
                "AzCliVersion": "2.15.0",
                "arguments": "[variables('arguments')]",
                "primaryScriptUri": "[uri(variables('scriptLocation'), concat('install.sh', parameters('_artifactsLocationSasToken')))]",
                "supportingScriptUris":[
                    "[uri(variables('scriptLocation'), concat('openlibertyapplication.yaml', parameters('_artifactsLocationSasToken')))]"
                ],
                "cleanupPreference": "OnSuccess",
                "retentionInterval": "P1D"
            }
        }
    ],
    "outputs": {
        "result": {
            "value": "[reference('deploymentScript').outputs.applicationEndpoint]",
            "type": "string"
        }
    }
}