{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {
                "name": "identityId",
                "type": "Microsoft.Common.TextBox",
                "label": "User Assigned Managed Identity",
                "toolTip": "Input the id of User Assigned Managed Identity.",
                "constraints": {
                    "required": true,
                    "regex": "^[a-z0-9A-Z\\-]+$",
                    "validationMessage": "The prefix must be between 3 and 79 characters long and contain letters, numbers only."
                }
            }
        ],
        "steps": [
            {
                "name": "AKSCluster",
                "label": "Create AKS cluster",
                "subLabel": {
                    "preValidation": "Provide required info for AKS cluster creation",
                    "postValidation": "Done"
                },
                "bladeTitle": "Create AKS cluster",
                "elements": [
                    {
                        "name": "aksClusterName",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Cluster name",
                        "defaultValue": "akscluster",
                        "toolTip": "Use only allowed characters.",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9A-Z]{1,30}$",
                            "validationMessage": "The value must be 1-30 characters long and must only contain letters and numbers."
                        }
                    },
                    {
                        "name": "spClientId",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Service principal client ID",
                        "toolTip": "The client ID of an existing service principal.",
                        "constraints": {
                            "required": true,
                            "regex": "^[0-9A-Fa-f]{8}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{4}[-][0-9A-Fa-f]{12}$",
                            "validationMessage": "The service principal Id should be a valid global unique identifier (GUID). Example: 00000000-0000-0000-0000-000000000000"
                        }
                    },
                    {
                        "name": "spClientSecret",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "Service principal client secret",
                            "confirmPassword": "Confirm client secret"
                        },
                        "options": {
                            "hideConfirmation": true
                        },
                        "toolTip": "The client secret of an existing service principal.",
                        "constraints": {
                            "required": true
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "location": "[location()]",
            "identityId": "[basics('identityId')]",
            "aksClusterName": "[steps('AKSCluster').aksClusterName]",
            "spClientId": "[steps('AKSCluster').spClientId]",
            "spClientSecret": "[steps('AKSCluster').spClientSecret]"
        }
    }
}
